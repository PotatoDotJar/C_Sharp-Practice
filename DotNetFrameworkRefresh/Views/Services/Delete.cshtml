@model DotNetFrameworkRefresh.Models.Service

@{
    ViewBag.Title = "Delete Service Entry";
}

<h2>@ViewBag.Title</h2>
<h4 class="text-muted">@Model.Car.IdentificationNumber</h4>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Car.Make)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Car.Make)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ServiceDateTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ServiceDateTime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ServiceHours)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ServiceHours)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ServiceNotes)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ServiceNotes)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to Entry", "Details", "Services", new { Id = Model.Id }, null) |
            @Html.ActionLink("Back to Vehicle", "Details", "Cars", new { Id = Model.CarId }, null)
        </div>
    }
</div>
